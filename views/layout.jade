doctype html
html
  head
    title Jumbotron Template for Bootstrap
    // Bootstrap core CSS
    link(href='/stylesheets/bootstrap.css', rel='stylesheet')
    link(href='/stylesheets/style.css', rel='stylesheet')
  body
    nav.navbar.navbar-expand-md.navbar-dark.bg-dark
      a.navbar-brand(href='#') NodeAuth
      #navbarsExampleDefault.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          if user
            li.nav-item(class=(title == 'Member') ? 'active' : '')
              a.nav-link(href='/') Members
          if !user  
            li.nav-item(class=(title == 'Register') ? 'active' : '')
              a.nav-link(href='/users/register') Register
            li.nav-item(class=(title == 'Login') ? 'active' : '')
              a.nav-link(href='/users/login') Login
        ul.navbar-nav.nav-right
          if user
            li.nav-item
              a.nav-link(href='/users/logout') Logout
        form.form-inline.my-2.my-lg-0
          input.form-control.mr-sm-2(type='text', placeholder='Search', aria-label='Search')
          button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search
    main(role='main')
      // Main jumbotron for a primary marketing message or call to action
      !=messages()
      .container
        block content
        hr
      // /container
    footer.container
      p(class='text-center') Â© Company 2017-2018
